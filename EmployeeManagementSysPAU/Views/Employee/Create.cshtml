@using EmployeeManagementSystemPAU.Models
@model EmployeeManagementSystemPAU.Models.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">Create New Employee</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold">Name</label>
                    <input type="text" asp-for="Name" class="form-control form-control-lg" placeholder="Enter employee name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold">Email</label>
                    <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Enter employee email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="font-weight-bold">Phone</label>
                    <input type="text" asp-for="Phone" class="form-control form-control-lg" placeholder="Enter employee phone" />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Position" class="font-weight-bold">Position</label>
                    <input type="text" asp-for="Position" class="form-control form-control-lg" placeholder="Enter employee position" />
                    <span asp-validation-for="Position" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="JoinDate" class="font-weight-bold">Join Date</label>
                    <input type="date" asp-for="JoinDate" class="form-control form-control-lg" />
                    <span asp-validation-for="JoinDate" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentID" class="font-weight-bold">Department</label>
                    <select asp-for="DepartmentID" class="form-control form-control-lg">
                        <option value="">-- Select Department --</option>
                        @foreach (var department in ViewBag.Departments as IEnumerable<Department>)
                        {
                            <option value="@department.DepartmentID">
                                @department.DepartmentName
                            </option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="font-weight-bold">Status</label>
                    <select asp-for="Status" class="form-control form-control-lg">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        padding: 20px;
    }

    .card-body {
        padding: 30px;
    }

    .form-control-lg {
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 16px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .text-danger {
        font-size: 14px;
    }

    .font-weight-bold {
        font-weight: 600;
    }
</style>



































